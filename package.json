    "koa-body": "^6.0.1",
    "koa-compress": "^5.1.1",
    "koa-mount": "^4.0.0",
    "koa-parameter": "^3.0.1",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "log4js": "^6.9.1",
    "mysql": "^2.18.1",
    "routing-controllers": "^0.10.4",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-session": "^6.4.2",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^12.0.0",
